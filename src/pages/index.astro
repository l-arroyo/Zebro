---
import Layout from "../layouts/Layout.astro";

const title = "Zebro";
const description = "";
const author = "";
const keywords = "";
const language = "en";
---

<Layout title={title} description={description} author={author} keywords={keywords} language={language}>
    <script type="text/javascript">
        window.addEventListener("DOMContentLoaded", () => {
            let lang = getLanguage();

            if (!lang) lang = "en";

            window.location.href = `/${lang}`;
            return;
        });
    </script>
</Layout>
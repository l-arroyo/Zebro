---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import Card from "../../components/Card.astro";

const title = "Página Principal - Rubén León";
const description = "";
const author = "";
const keywords = "";
const language = "es";

const pageNames = ["Inicio", "Sobre mi", "Proyectos"];
const pageLinks = ["/", "about", "projects"];
---

<Layout title={title} description={description} author={author} keywords={keywords} language={language}>

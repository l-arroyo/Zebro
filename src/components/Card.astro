---
interface Props {
    icon: string;
    title: string;
    text: string;
    link: string;
}

const { icon, title, text, link } = Astro.props;
---

<div class="col-md-4">
    <div class="card p-4 mb-2">
        <div class="d-flex flex-column justify-content-center">
            <div class="icon"><i class="bx"><img src={"/img/" + icon} alt="icono tarjeta"></i></div>
            <div class="mt-2">
                <h3 class="heading">{title}</h3>
                <div class="my-3">
                    <p>{text}</p>
                </div>
            </div>
            <a class="btn btn-primary" role="button" href={link} target={link == '' ? '_self' : '_blank'}>Ver</a>
        </div>
    </div>
</div>
